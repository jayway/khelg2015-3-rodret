<main class="main" role="main">

  <div class="members">

    <ul>
      <% members.forEach(function (member) { %>
      <li><%= member.name %></li>
      <% }); %>
    </ul>
    <button class="btn">Add member</button>

  </div>

</main>

<div class="overlay">
  <form class="overlay-inner">
    <label>
      <h4>Add member</h4>
      <input class="member-name" type="text" placeholder="Name" required autofocus>
    </label>
    <button type="submit" class="btn">Add</button>
  </form>
</div>
